<h1>Create Blog Post</h1>

{{#if errors.length}}
    <p>Couldn't create the blog post because:</p>
    <ul>
        {{#each errors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<form action="/blog/create" method="POST">
    <div>
        Name:
        <input type="text" name="title" class="form-control">
    </div>

    <div>
        Description:<br>
        <textarea name="textBody" class="form-control"></textarea>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>