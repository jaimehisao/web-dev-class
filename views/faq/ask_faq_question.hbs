<h1>Ask questions</h1>

{{#if errors.length}}
    <p>Couldn't add a question due to:</p>
    <ul>
        {{#each errors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<form action="/faqs/ask" method="POST">
    <div>
        Your Name: <input type="text" name="name" class="form-control">
    </div>
    <div>
        Question to ask:<br>
        <textarea name="question" class="form-control"></textarea>
    </div>
    <div>
        <input type="submit" value="Update" class="btn btn-primary">
    </div>
</form>