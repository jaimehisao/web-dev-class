<h1>Respond to Question</h1>

{{#if errors.length}}
    <div class="alert alert-primary" role="alert">
        <p>Couldn't respond to the question due to:</p>
        <ul>
            {{#each errors}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}

<form action="/faqs/{{id}}/respond" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div>
        <p>Original Question</p>
        <p>{{question}}</p>
    </div>
    <div>
        Response:<br>
        <textarea name="questionResponse" class="form-control">{{questionResponse}}</textarea>
    </div>
    <div>
        <input type="submit" value="Answer" class="btn btn-primary">
    </div>
</form>